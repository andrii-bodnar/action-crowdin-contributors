{
  "name": "action-crowdin-contributors",
  "version": "0.0.1",
  "private": true,
  "description": "Automate acknowledging translators and proofreaders to your open-source projects in Crowdin",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "test-coverage": "jest --ci --reporters=jest-junit --reporters=default --coverage --coverageReporters=cobertura --coverageReporters=html",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrii-bodnar/action-crowdin-contributors"
  },
  "keywords": [
    "actions",
    "crowdin",
    "translations",
    "sync"
  ],
  "author": {
    "name": "Andrii Bodnar",
    "url": "https://github.com/andrii-bodnar"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^5.1.1",
    "@crowdin/crowdin-api-client": "^1.19.2",
    "axios": "^1.2.0",
    "dotenv": "^16.0.3",
    "pretty": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^18.11.9",
    "@types/pretty": "^2.0.1",
    "@typescript-eslint/parser": "^5.43.0",
    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.28.0",
    "eslint-plugin-github": "^4.4.1",
    "eslint-plugin-jest": "^27.1.5",
    "jest": "^27.2.5",
    "jest-junit": "^15.0.0",
    "js-yaml": "^4.1.0",
    "prettier": "2.7.1",
    "ts-jest": "^27.1.2",
    "typescript": "^4.9.3"
  }
}
