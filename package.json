{
  "name": "action-crowdin-contributors",
  "version": "2.0.0",
  "private": true,
  "description": "Automate acknowledging translators and proofreaders to your open-source projects in Crowdin",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "test-coverage": "jest --ci --reporters=jest-junit --reporters=default --coverage --coverageReporters=cobertura --coverageReporters=html",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrii-bodnar/action-crowdin-contributors"
  },
  "keywords": [
    "actions",
    "crowdin",
    "translations",
    "sync",
    "contributors",
    "acknowledgement",
    "table",
    "translators",
    "proofreaders",
    "open-source",
    "report",
    "crowdsourcing"
  ],
  "author": {
    "name": "Andrii Bodnar",
    "url": "https://github.com/andrii-bodnar"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.0",
    "@crowdin/crowdin-api-client": "^1.38.0",
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "pretty": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.16.5",
    "@types/pretty": "^2.0.3",
    "@typescript-eslint/parser": "^7.18.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.57.0",
    "eslint-plugin-github": "^4.10.2",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "js-yaml": "^4.1.0",
    "prettier": "3.3.3",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.2"
  }
}
