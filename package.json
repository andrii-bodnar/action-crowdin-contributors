{
  "name": "action-crowdin-contributors",
  "version": "3.0.0",
  "private": true,
  "type": "module",
  "description": "Automate acknowledging translators and proofreaders to your open-source projects in Crowdin",
  "main": "lib/main.js",
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "ci-test": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 npx jest",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint .",
    "local-action": "npx @github/local-action . src/main.ts .env",
    "package": "npx rimraf ./dist && npx rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "package:watch": "npm run package -- --watch",
    "test": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 npx jest",
    "all": "npm run format:write && npm run lint && npm run test && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrii-bodnar/action-crowdin-contributors"
  },
  "keywords": [
    "actions",
    "crowdin",
    "translations",
    "sync",
    "contributors",
    "acknowledgement",
    "table",
    "translators",
    "proofreaders",
    "open-source",
    "report",
    "crowdsourcing"
  ],
  "author": {
    "name": "Andrii Bodnar",
    "url": "https://github.com/andrii-bodnar"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^2.0.0",
    "@actions/exec": "^2.0.0",
    "@actions/github": "^6.0.1",
    "@crowdin/crowdin-api-client": "^1.51.1",
    "axios": "^1.13.2",
    "dotenv": "^17.2.3",
    "pretty": "^2.0.0"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.0",
    "@github/local-action": "^6.0.2",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/node": "^25",
    "@types/pretty": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.2.1",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "jest-junit": "^16.0.0",
    "js-yaml": "^4.1.1",
    "prettier": "3.7.4",
    "prettier-eslint": "^16.4.2",
    "rollup": "^4.53.3",
    "ts-jest": "^29.4.6",
    "ts-jest-resolver": "^2.0.1",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "*"
  },
  "engines": {
    "node": ">=24"
  }
}
